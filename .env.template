# MOPONS Environment Configuration
# Copy this file and save as .env (without .example)

# Environment
NODE_ENV=development
PORT=5000

# Database Configuration
# For local MongoDB (default)
MONGODB_URI=mongodb://127.0.0.1:27017/mopons

# For MongoDB Atlas (cloud - if you prefer)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mopons?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=mopons_super_secret_jwt_key_2024_change_in_production_12345
JWT_EXPIRE=7d

# Frontend URL
CLIENT_URL=http://localhost:3000

# Cloudinary Configuration (Optional - for image uploads)
# Sign up at https://cloudinary.com for free account
# Leave as 'demo' for testing without image upload
CLOUDINARY_CLOUD_NAME=demo
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Email Configuration (Optional - for email notifications)
# For Gmail: Enable 2FA and generate App Password
# App will work without this, just won't send emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Razorpay Configuration (Optional - for payment gateway)
# Sign up at https://razorpay.com for test keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
